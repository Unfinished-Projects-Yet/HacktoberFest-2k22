<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.learn_spanish_application">

    <application
        android:allowBackup="true"
        android:icon="@drawable/learn_spanish"
        android:label="Learn Spanish"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Learn_Spanish_Application">
        <activity android:name=".PhrasesActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".FamilyActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".ColorsActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".NumbersActivity" android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>